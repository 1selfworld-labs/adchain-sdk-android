<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Adchain SDK Theme for WebView Activity -->
    <style name="AdchainSDKTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar configuration - White background to match WebView -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- Navigation bar configuration -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Window configuration - Dark icons for white status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Allow content to extend into display cutout area (notch) - moved to values-v27 for API compatibility -->

        <!-- Ensure window draws system bar backgrounds -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Disable forced dark mode - moved to values-v29 for API compatibility -->
    </style>
</resources>