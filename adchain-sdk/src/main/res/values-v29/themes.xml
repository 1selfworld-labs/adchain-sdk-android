<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Adchain SDK Theme for WebView Activity - API 29+ specific attributes -->
    <style name="AdchainSDKTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar configuration - White background to match WebView -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- Navigation bar configuration -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Window configuration - Dark icons for white status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Allow content to extend into display cutout area (notch) - API 27+ -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Ensure window draws system bar backgrounds -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Disable forced dark mode - API 29+ -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>